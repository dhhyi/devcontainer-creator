{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for python",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-python-cache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "python",
    "DCC_REPL": "python",
    "DCC_SELFTEST": "cHl0aG9uIC1jICdwcmludCgiSGVsbG8gV29ybGQhIikn",
    "DCC_VERSION": "python --version"
  }
}
