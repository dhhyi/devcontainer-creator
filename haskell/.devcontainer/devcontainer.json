{
  "name": "Example devcontainer for haskell",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postAttachCommand": ["sh", "-e", "/disclaimer.sh", "${containerWorkspaceFolder}"],
  "features": {
    "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest": {}
  },
  "settings": {
    "files.exclude": {
      ".devcontainer": true,
      ".update_devcontainer.sh": true,
      ".vscode": true
    }
  },
  "extensions": [
    "haskell.haskell"
  ],
  "remoteUser": "vscode"
}
