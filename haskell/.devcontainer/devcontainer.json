{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for haskell",
  "runArgs": [
    "--name",
    "example-devcontainer-for-haskell-${devcontainerId}"
  ],
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-haskell-cache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "dramforever.vscode-ghc-simple",
        "justusadam.language-haskell",
        "hoovercj.haskell-linter"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "runhaskell",
    "DCC_REPL": "ghci",
    "DCC_SELFTEST": "Y2F0ID4gL3RtcC9oZWxsb3dvcmxkLmhzIDw8RU9GCm1haW4gPSBwdXRTdHJMbiAiSGVsbG8gV29ybGQhIgpFT0YKcnVuaGFza2VsbCAvdG1wL2hlbGxvd29ybGQuaHMK",
    "DCC_VERSION": "ghc --version"
  }
}
