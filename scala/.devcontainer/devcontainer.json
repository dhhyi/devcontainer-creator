{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for scala",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-scala-cache",
    "args": {
      "AMMONITE_VERSION": "3.0.0/2.13-3.0.0-2-6342755f"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "[scala]": {
          "editor.defaultFormatter": "scalameta.metals",
          "editor.tabSize": 2
        },
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        },
        "files.watcherExclude": {
          "**/target": true
        }
      },
      "extensions": [
        "scalameta.metals"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "amm",
    "DCC_REPL": "amm",
    "DCC_SELFTEST": "Y2F0ID4vdG1wL2hlbGxvd29ybGQuc2NhbGEgPDxFT0YKQG1haW4gZGVmIG1haW4oKSA9IHsKICAgIHByaW50bG4oIkhlbGxvIFdvcmxkISIpCn0KRU9GCmFtbSAvdG1wL2hlbGxvd29ybGQuc2NhbGEK",
    "DCC_VERSION": "amm --version"
  }
}
