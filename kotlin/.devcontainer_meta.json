[
  {
    "id": "ghcr.io/devcontainers/features/common-utils:1"
  },
  {
    "id": "ghcr.io/devcontainers/features/git:1"
  },
  {
    "id": "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest",
    "customizations": {
      "vscode": {
        "extensions": [
          "GitHub.copilot"
        ],
        "settings": {
          "terminal.integrated.profiles.linux": {
            "zsh": {
              "path": "zsh",
              "args": [
                "-l"
              ]
            }
          },
          "terminal.integrated.defaultProfile.linux": "zsh",
          "editor.formatOnSave": true,
          "files.insertFinalNewline": true,
          "files.trimFinalNewlines": true,
          "files.trimTrailingWhitespace": true,
          "[jsonc]": {
            "editor.defaultFormatter": "vscode.json-language-features"
          },
          "task.autoDetect": "off"
        }
      }
    }
  },
  {
    "postCreateCommand": [
      "sudo",
      "-E",
      "/home/dcc/install-helpers.sh"
    ],
    "postAttachCommand": [
      "sh",
      "-e",
      "/disclaimer.sh",
      "${containerWorkspaceFolder}"
    ],
    "remoteUser": "vscode"
  },
  {
    "id": "ghcr.io/devcontainers/features/java:1",
    "customizations": {
      "vscode": {
        "extensions": [
          "vscjava.vscode-java-pack"
        ],
        "settings": {
          "java.import.gradle.java.home": "/usr/local/sdkman/candidates/java/current"
        }
      }
    }
  },
  {
    "customizations": {
      "vscode": {
        "settings": {
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        },
        "extensions": [
          "fwcd.kotlin"
        ]
      }
    },
    "containerEnv": {
      "DCC_BINARY": "",
      "DCC_REPL": "",
      "DCC_SELFTEST": "Y2F0ID4vdG1wL2hlbGxvd29ybGQua3QgPDxFT0YKZnVuIG1haW4oKSB7CiAgcHJpbnRsbigiSGVsbG8gV29ybGQhIikKfQpFT0YKa290bGluYy1uYXRpdmUgL3RtcC9oZWxsb3dvcmxkLmt0IC1vIC90bXAvaGVsbG93b3JsZAovdG1wL2hlbGxvd29ybGQua2V4ZQo=",
      "DCC_VERSION": ""
    }
  },
  {
    "customizations": {
      "dcc": {
        "languageName": "kotlin"
      }
    }
  }
]