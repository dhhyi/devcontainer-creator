{
  "name": "Example devcontainer for perl",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "cfgweb.vscode-perl",
        "richterger.perl"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "perl",
    "DCC_REPL": "",
    "DCC_SELFTEST": "cGVybCAtZSAncHJpbnQgIkhlbGxvIFdvcmxkIVxuIjsn",
    "DCC_VERSION": "perl --version"
  }
}
