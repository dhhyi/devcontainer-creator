{
  "name": "Example devcontainer for perl",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "files.exclude": {
      ".devcontainer": true,
      ".update_devcontainer.sh": true,
      ".vscode": true
    }
  },
  "extensions": [
    "cfgweb.vscode-perl",
    "richterger.perl"
  ],
  "containerEnv": {
    "DCC_BINARY": "perl",
    "DCC_REPL": "",
    "DCC_VERSION": "perl --version",
    "DCC_SELFTEST": "cGVybCAtZSAncHJpbnQgIkhlbGxvIFdvcmxkIVxuIjsn"
  }
}
