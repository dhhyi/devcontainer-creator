{
  "name": "Example devcontainer for perl",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "ghcr.io/dhhyi/dcc-devcontainer-perl"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "richterger.perl",
        "sfodje.perltidy"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "perl",
    "DCC_REPL": "",
    "DCC_SELFTEST": "cGVybCAtZSAncHJpbnQgIkhlbGxvIFdvcmxkIVxuIjsnCnBlcmx0aWR5IC12Cg==",
    "DCC_VERSION": "perl --version"
  }
}
