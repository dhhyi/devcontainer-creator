[
  {
    "id": "ghcr.io/devcontainers/features/common-utils:1"
  },
  {
    "id": "ghcr.io/devcontainers/features/git:1"
  },
  {
    "id": "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest",
    "customizations": {
      "vscode": {
        "extensions": [
          "GitHub.copilot"
        ],
        "settings": {
          "terminal.integrated.profiles.linux": {
            "zsh": {
              "path": "zsh",
              "args": [
                "-l"
              ]
            }
          },
          "terminal.integrated.defaultProfile.linux": "zsh",
          "editor.formatOnSave": true,
          "files.insertFinalNewline": true,
          "files.trimFinalNewlines": true,
          "files.trimTrailingWhitespace": true,
          "[jsonc]": {
            "editor.defaultFormatter": "vscode.json-language-features"
          },
          "task.autoDetect": "off"
        }
      }
    }
  },
  {
    "postAttachCommand": [
      "sh",
      "-e",
      "/disclaimer.sh",
      "${containerWorkspaceFolder}"
    ],
    "remoteUser": "vscode"
  },
  {
    "customizations": {
      "vscode": {
        "extensions": [
          "cfgweb.vscode-perl",
          "richterger.perl"
        ],
        "settings": {
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        }
      }
    },
    "containerEnv": {
      "DCC_BINARY": "perl",
      "DCC_REPL": "",
      "DCC_VERSION": "perl --version",
      "DCC_SELFTEST": "cGVybCAtZSAncHJpbnQgIkhlbGxvIFdvcmxkIVxuIjsn"
    }
  }
]