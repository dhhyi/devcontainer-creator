{
  "$id": "https://example.com/language.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Language",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "extends": {
      "type": "string",
      "enum": [
        "base://brew",
        "base://debian",
        "base://go",
        "base://java",
        "base://node",
        "base://python",
        "base://ruby",
        "dcc://cicada",
        "dcc://clojure",
        "dcc://crystal",
        "dcc://elixir",
        "dcc://elm",
        "dcc://erlang",
        "dcc://factor",
        "dcc://go",
        "dcc://hare",
        "dcc://haskell",
        "dcc://idris2",
        "dcc://io",
        "dcc://javascript",
        "dcc://julia",
        "dcc://koka",
        "dcc://kotlin",
        "dcc://lua",
        "dcc://moonscript",
        "dcc://odin",
        "dcc://perl",
        "dcc://prolog",
        "dcc://python",
        "dcc://raku",
        "dcc://ruby",
        "dcc://scala",
        "dcc://tcl",
        "dcc://typescript",
        "dcc://zig"
      ]
    },
    "language": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "binary": {
          "type": "string"
        },
        "binaryArgs": {
          "type": "string"
        },
        "repl": {
          "type": "string"
        },
        "version": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "boolean",
              "not": {
                "const": true
              }
            }
          ]
        }
      }
    },
    "devcontainer": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "build": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "args": {
              "type": "object"
            },
            "files": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "type",
                  "path",
                  "content"
                ],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "script",
                      "file"
                    ]
                  },
                  "path": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              }
            },
            "prepare": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "packages": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "user": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "root": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "selftest": {
          "type": "string"
        },
        "remoteUser": {
          "type": "string"
        }
      }
    },
    "vscode": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "script": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "boolean",
              "not": {
                "const": true
              }
            }
          ]
        },
        "extensions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "hideFiles": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "boolean",
              "not": {
                "const": true
              }
            }
          ]
        },
        "settings": {
          "type": "object"
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "label",
              "command"
            ],
            "properties": {
              "label": {
                "type": "string"
              },
              "command": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "extras": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "forward-x11"
        ]
      }
    }
  }
}
