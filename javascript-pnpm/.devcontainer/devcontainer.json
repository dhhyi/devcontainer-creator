{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for javascript-pnpm",
  "runArgs": [
    "--name",
    "example-devcontainer-for-javascript-pnpm-${devcontainerId}"
  ],
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-javascript-pnpm-cache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      }
    }
  },
  "containerEnv": {
    "DCC_BINARY": "node",
    "DCC_REPL": "node",
    "DCC_VERSION": "node --version; pnpm --version; /tmp/check-pnpm-volume.sh"
  }
}
