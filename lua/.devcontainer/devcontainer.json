{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for lua",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-lua-cache",
    "args": {
      "LUA_VERSION": "5.4.7",
      "LUAROCKS_VERSION": "3.11.1"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "sumneko.lua",
        "bubuabu.busted-test-explorer"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "lua",
    "DCC_REPL": "lua",
    "DCC_SELFTEST": "bHVhIC1lICdwcmludCgiSGVsbG8gV29ybGQhIikn",
    "DCC_VERSION": "lua -v; luarocks --version"
  }
}
