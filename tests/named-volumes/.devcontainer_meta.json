[
  {
    "id": "ghcr.io/devcontainers-extra/features/mise:1"
  },
  {
    "id": "ghcr.io/devcontainers/features/common-utils:2"
  },
  {
    "id": "ghcr.io/devcontainers/features/common-utils:2"
  },
  {
    "id": "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:1"
  },
  {
    "id": "ghcr.io/braun-daniel/devcontainer-features/fzf:1"
  },
  {
    "id": "ghcr.io/devcontainers/features/git:1",
    "customizations": {
      "vscode": {
        "settings": {
          "github.copilot.chat.codeGeneration.instructions": [
            {
              "text": "This dev container includes an up-to-date version of Git, built from source as needed, pre-installed and available on the `PATH`."
            }
          ]
        }
      }
    }
  },
  {
    "id": "ghcr.io/meaningful-ooo/devcontainer-features/fish:2",
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.defaultProfile.linux": "fish"
        }
      }
    }
  },
  {
    "id": "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest",
    "customizations": {
      "vscode": {
        "extensions": [
          "GitHub.copilot"
        ],
        "settings": {
          "terminal.integrated.profiles.linux": {
            "fish": {
              "path": "fish",
              "args": [
                "-l"
              ]
            }
          },
          "terminal.integrated.defaultProfile.linux": "fish",
          "editor.formatOnSave": true,
          "files.insertFinalNewline": true,
          "files.trimFinalNewlines": true,
          "files.trimTrailingWhitespace": true,
          "[jsonc]": {
            "editor.defaultFormatter": "vscode.json-language-features"
          },
          "task.autoDetect": "off"
        }
      }
    }
  },
  {
    "postCreateCommand": {
      "helpers": [
        "sudo",
        "-E",
        "/home/dcc/install-helpers.sh"
      ],
      "lazygit": [
        "sudo",
        "chown",
        "-R",
        "ubuntu:ubuntu",
        "/home/ubuntu/.local/state/lazygit"
      ],
      "mise": [
        "fish",
        "-c",
        "mise install --yes"
      ]
    },
    "postAttachCommand": [
      "/disclaimer.fish",
      "${containerWorkspaceFolder}"
    ],
    "mounts": [
      "type=volume,target=/home/ubuntu/.local/state/lazygit,source=lazygit-history-${devcontainerId}"
    ],
    "remoteUser": "ubuntu"
  },
  {
    "customizations": {
      "vscode": {
        "settings": {
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        }
      }
    }
  },
  {
    "customizations": {
      "vscode": {
        "settings": {
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        }
      }
    },
    "containerEnv": {
      "DCC_SELFTEST": "bm9kZSAtZSAnY29uc29sZS5sb2coIkhlbGxvIFdvcmxkISIpJw=="
    }
  },
  {
    "customizations": {
      "vscode": {
        "settings": {
          "[javascript]": {
            "editor.defaultFormatter": "vscode.typescript-language-features"
          },
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        },
        "extensions": [
          "nicoespeon.abracadabra"
        ]
      }
    },
    "containerEnv": {
      "DCC_BINARY": "node",
      "DCC_REPL": "node",
      "DCC_SELFTEST": "bm9kZSAtZSAnY29uc29sZS5sb2coIkhlbGxvIFdvcmxkISIpJw==",
      "DCC_VERSION": "node --version"
    }
  },
  {
    "customizations": {
      "vscode": {
        "settings": {
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        }
      }
    },
    "containerEnv": {
      "DCC_BINARY": "node",
      "DCC_REPL": "node",
      "DCC_VERSION": "node --version; pnpm self-update && pnpm --version; /tmp/check-pnpm-volume.sh"
    }
  },
  {
    "postCreateCommand": "sudo mkdir -p node_modules /home/ubuntu/.cache/pnpm && sudo chown -Rf ubuntu node_modules && sudo chown -Rf ubuntu /home/ubuntu",
    "postStartCommand": "mkdir -p $HOME/project && cd $HOME/project && echo '{\"name\":\"test\",\"dependencies\":{\"prettier\":\"*\"}}' > package.json && pnpm install",
    "customizations": {
      "vscode": {
        "settings": {
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        }
      }
    },
    "mounts": [
      "type=volume,target=${containerWorkspaceFolder}/node_modules,source=dcc-test-node-modules",
      "type=volume,target=/home/ubuntu/.cache/pnpm,source=dcc-test-pnpm-cache"
    ],
    "containerEnv": {
      "DCC_SELFTEST": "Y2QgJEhPTUUvcHJvamVjdCAmJiBucG0gZXhlYyBwcmV0dGllciAtLSAtLXZlcnNpb24="
    }
  }
]