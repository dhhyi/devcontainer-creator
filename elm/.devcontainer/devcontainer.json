{
  "name": "Example devcontainer for elm",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "NODE_VERSION": "16"
    }
  },
  "postAttachCommand": "/disclaimer.sh \"${containerWorkspaceFolder}\"",
  "features": {
    "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest": {}
  },
  "settings": {
    "[elm]": {
      "editor.defaultFormatter": "elmTooling.elm-ls-vscode"
    },
    "files.exclude": {
      ".devcontainer": true,
      ".update_devcontainer.sh": true,
      ".vscode": true
    }
  },
  "extensions": [
    "elmTooling.elm-ls-vscode"
  ],
  "remoteUser": "node"
}
