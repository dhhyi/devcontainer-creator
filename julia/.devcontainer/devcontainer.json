{
  "name": "Example devcontainer for julia",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "JULIA_BASE_VERSION": "1.8",
      "JULIA_MINOR_VERSION": "2"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "julialang.language-julia"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "julia",
    "DCC_REPL": "julia",
    "DCC_SELFTEST": "anVsaWEgLWUgJ3ByaW50bG4oIkhlbGxvIFdvcmxkISIpJw==",
    "DCC_VERSION": "julia --version"
  }
}
