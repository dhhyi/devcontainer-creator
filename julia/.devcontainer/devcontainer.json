{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for julia",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-julia-cache",
    "args": {
      "JULIA_BASE_VERSION": "1.11",
      "JULIA_MINOR_VERSION": "6"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "julialang.language-julia"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "julia",
    "DCC_REPL": "julia",
    "DCC_SELFTEST": "anVsaWEgLWUgJ3ByaW50bG4oIkhlbGxvIFdvcmxkISIpJw==",
    "DCC_VERSION": "julia --version"
  }
}
