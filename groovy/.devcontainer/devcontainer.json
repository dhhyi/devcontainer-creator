{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for groovy",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-groovy-cache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "NicolasVuillamy.vscode-groovy-lint"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "groovy",
    "DCC_REPL": "",
    "DCC_SELFTEST": "ZWNobyAicHJpbnRsbiAnSGVsbG8sIFdvcmxkISciID4gL3RtcC9oZWxsby5ncm9vdnkKZ3Jvb3Z5IC90bXAvaGVsbG8uZ3Jvb3Z5Cg==",
    "DCC_VERSION": "groovy --version"
  }
}
