{
  "image": "debian:stable-20260112",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userGid": 1000,
      "userUid": 1000,
      "installZsh": false,
      "installOhMyZsh": false,
      "installOhMyZshConfig": false,
      "configureZshAsDefaultShell": false
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
    "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest": {
      "fisherPlugins": ["jhillyerd/plugin-git"]
    },
    "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:1": {},
    "ghcr.io/braun-daniel/devcontainer-features/fzf:1": {},
    "ghcr.io/devcontainers-extra/features/mise:1": {}
  },
  "mounts": [
    "type=volume,target=/home/vscode/.local/state/lazygit,source=lazygit-history-${devcontainerId}"
  ],
  "postCreateCommand": {
    "helpers": ["sudo", "-E", "/home/dcc/install-helpers.sh"],
    "lazygit": [
      "sudo",
      "chown",
      "-R",
      "vscode:vscode",
      "/home/vscode/.local/state/lazygit"
    ],
    "mise": ["fish", "-c", "mise install --yes"]
  },
  "postAttachCommand": ["/disclaimer.fish", "${containerWorkspaceFolder}"],
  "remoteUser": "vscode"
}
