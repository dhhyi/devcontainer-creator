{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for moonscript",
  "runArgs": [
    "--name",
    "example-devcontainer-for-moonscript-${devcontainerId}"
  ],
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-moonscript-cache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "vgalaktionov.moonscript"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "moon",
    "DCC_REPL": "",
    "DCC_SELFTEST": "Y2F0ID4vdG1wL2hlbGxvd29ybGQubW9vbiA8PEVPRgpwcmludCAiSGVsbG8gV29ybGQhIgpFT0YKbW9vbiAvdG1wL2hlbGxvd29ybGQubW9vbgo=",
    "DCC_VERSION": "moonc -v ."
  }
}
