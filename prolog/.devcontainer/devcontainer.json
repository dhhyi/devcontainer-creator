{
  "name": "Example devcontainer for prolog",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "PROLOG_VERSION": "1.5.0"
    }
  },
  "postAttachCommand": "sh /disclaimer.sh \"${containerWorkspaceFolder}\"",
  "features": {
    "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest": {}
  },
  "settings": {
    "files.associations": {
      "*.pl": "prolog"
    },
    "files.exclude": {
      ".devcontainer": true,
      ".update_devcontainer.sh": true,
      ".vscode": true
    }
  },
  "extensions": [
    "rebornix.prolog"
  ],
  "remoteUser": "vscode"
}
