{
  "name": "Example devcontainer for io",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "IO_VERSION": "2019.05.22-alpha"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "kennethceyer.io"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "io",
    "DCC_REPL": "io",
    "DCC_SELFTEST": "aW8gLWUgJyJIZWxsbyBXb3JsZCEiIHByaW50bG4n",
    "DCC_VERSION": "io --version"
  }
}
