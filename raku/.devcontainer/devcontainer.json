{
  "name": "Example devcontainer for raku",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "ghcr.io/dhhyi/dcc-devcontainer-raku"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        }
      },
      "extensions": [
        "bscan.raku-navigator"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "raku",
    "DCC_REPL": "raku",
    "DCC_SELFTEST": "cmFrdSAtZSAncHJpbnQgIkhlbGxvIFdvcmxkIVxuIic=",
    "DCC_VERSION": "raku --version"
  }
}
