{
  "$schema": "https://raw.githubusercontent.com/devcontainers/spec/refs/heads/main/schemas/devContainer.schema.json",
  "name": "Example devcontainer for clojure",
  "runArgs": [
    "--name",
    "example-devcontainer-for-clojure-${devcontainerId}"
  ],
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "type=registry,ref=ghcr.io/dhhyi/dcc-devcontainer-clojure-cache"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.exclude": {
          ".devcontainer": true,
          ".update_devcontainer.sh": true,
          ".vscode": true
        },
        "files.watcherExclude": {
          "**/target": true
        }
      },
      "extensions": [
        "betterthantomorrow.calva"
      ]
    }
  },
  "containerEnv": {
    "DCC_BINARY": "clojure -M",
    "DCC_REPL": "clojure",
    "DCC_SELFTEST": "Y2xvanVyZSAtTSAtZSAnKHByaW50bG4gIkhlbGxvIFdvcmxkISIpJw==",
    "DCC_VERSION": "clojure-lsp --version; clojure --version"
  }
}
