{
  "version": "2.0.0",
  "tasks": [
    {
      "command": "cont ${fileDirname} zig run ${file}",
      "label": "Run file continuously",
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "command": "cont ${fileDirname} zig run ${file} ${input:arguments}",
      "label": "Run file continuously with arguments",
      "problemMatcher": [],
      "type": "shell"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "arguments",
      "description": "Arguments.",
      "default": "1 2 3 4 5"
    }
  ]
}
