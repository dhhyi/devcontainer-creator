[
  {
    "id": "ghcr.io/devcontainers/features/common-utils:2"
  },
  {
    "id": "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:1"
  },
  {
    "id": "ghcr.io/devcontainers/features/git:1"
  },
  {
    "id": "ghcr.io/dhhyi/devcontainer-creator/dcc-helpers:latest",
    "customizations": {
      "vscode": {
        "extensions": [
          "GitHub.copilot"
        ],
        "settings": {
          "terminal.integrated.profiles.linux": {
            "zsh": {
              "path": "zsh",
              "args": [
                "-l"
              ]
            }
          },
          "terminal.integrated.defaultProfile.linux": "zsh",
          "editor.formatOnSave": true,
          "files.insertFinalNewline": true,
          "files.trimFinalNewlines": true,
          "files.trimTrailingWhitespace": true,
          "[jsonc]": {
            "editor.defaultFormatter": "vscode.json-language-features"
          },
          "task.autoDetect": "off"
        }
      }
    }
  },
  {
    "postCreateCommand": [
      "sudo",
      "-E",
      "/home/dcc/install-helpers.sh"
    ],
    "postAttachCommand": [
      "sh",
      "-e",
      "/disclaimer.sh",
      "${containerWorkspaceFolder}"
    ],
    "remoteUser": "vscode"
  },
  {
    "customizations": {
      "vscode": {
        "settings": {
          "[typescript]": {
            "editor.defaultFormatter": "denoland.vscode-deno"
          },
          "deno.enable": true,
          "deno.lint": true,
          "files.exclude": {
            ".devcontainer": true,
            ".update_devcontainer.sh": true,
            ".vscode": true
          }
        },
        "extensions": [
          "denoland.vscode-deno"
        ]
      }
    },
    "containerEnv": {
      "DCC_BINARY": "deno run",
      "DCC_REPL": "",
      "DCC_SELFTEST": "ZGVubyBldmFsICdjb25zb2xlLmxvZygiSGVsbG8gd29ybGQhIikn",
      "DCC_VERSION": "deno --version"
    }
  },
  {
    "customizations": {
      "dcc": {
        "languageName": "deno"
      }
    }
  }
]